# --- Database Configuration ---
POSTGRES_USER=inopsio_admin
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=inopsio_db

# The full connection URL for Prisma/SQLAlchemy
DATABASE_URL="postgresql://inopsio_admin:change_this_to_a_secure_password@localhost:5432/inopsio_db"

# --- Backend Configuration ---
# Generate a secure key using: openssl rand -hex 32
SECRET_KEY=super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Frontend Configuration ---
# The Public URL where users access your site (e.g., https://app.inopsio.com)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# The Public URL of your Backend API (e.g., https://api.inopsio.com/api/v1)
# NOTE: In production, this must be the real domain, not 'localhost'
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# --- AI & External Services ---
GEMINI_API_KEY=your-google-gemini-key
STRIPE_SECRET_KEY=your-stripe-key